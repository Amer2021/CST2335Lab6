<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cst2335Lab6">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.cst2335Lab6">
        <activity android:name="com.cst2335Lab6.WeatherForecast"></activity>
        <activity
            android:name="com.cst2335Lab6.ProfileActivity"
            android:configChanges="locale" />
        <activity
            android:name="com.cst2335Lab6.ChatRoomActivity"
            android:configChanges="locale" />
        <activity
            android:name="com.cst2335Lab6.MainActivity"
            android:configChanges="locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>